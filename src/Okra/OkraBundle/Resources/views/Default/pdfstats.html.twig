<html>
    <head>
        <meta charset="UTF-8" />
        <style type="text/css">
        body {
          font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
          color: #333
        }
        </style>
    </head>
    <body>
                <table width="100%">
                    <thead>
                        <tr>
                            <th>{% trans %}Item{% endtrans %}</th>
                            <th>{% trans %}Price{% endtrans %}</th>
                                <th>
                                    {{ session.dateStart | craue_date }} - {{ session.dateStop | craue_date }} 
                                        {% if session.comment %} 
                                            <br/> {{ session.comment }} 
                                        {% endif %}
                                <table width="100%">
                                    <thead>
                                            {% for date in dates[session.id] %}
                                                <th width="{{ 100 / loop.length }}%">{{ date.dateDay }}/{{ date.dateMonth }}/{{ date.dateYear }} </th>
                                            {% endfor %}  
                                    </thead>
                                </table>    
                                </th>
                        </tr>
                    </thead>                    
                    <tbody>
                        {% for category in categories %}
                            {% for item in items[category.id] %}
                                <tr>
                                    <td style="border-bottom: dotted black;">
                                        {{ item.idCategory.name }} - {{ item.name }}
                                    </td>
                                    <td style="border-bottom: dotted black;">
                                        {{ item.price | craue_currency('EUR') }}
                                    </td>
                                    <td style="border-bottom: dotted black;">
                                        <table width="100%">
                                            <tbody>
                                                {% for date in dates[session.id] %}
                                                    <td width="{{ 100 / loop.length }}%">
                                                    {% for stat in stats[session.id][date.dateYear][date.dateMonth][date.dateDay] %}
                                                        {% if (stat.id == item.id) and (stat.dateDay == date.dateDay) and (stat.dateMonth == date.dateMonth) and (stat.dateYear == date.dateYear) %} 
                                                            <table width="100%">
                                                                <tr>
                                                                    <td width="50%">
                                                                        {{ stat.nbr }}    
                                                                    </td>
                                                                    <td width="50%">
                                                                        {{ stat.total | craue_currency('EUR') }}    
                                                                    </td>                                                                    
                                                                </tr>
                                                            </table>
                                                        {% endif %}
                                                    {% endfor %}           
                                                    </td>
                                                {% endfor %}  
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            {% endfor %}  
                        {% endfor %}     
                    </tbody>
                </table>
                    <br/><br/>
        <table width="100%">
            <tbody>
                <tr>
                    <td class="text-left">{% trans %}Start{% endtrans %}</td>
                    <td class="text-right">{{ totalStart | craue_currency('EUR') }}</td>
                </tr>                
                <tr>
                    <td class="text-left">{% trans %}Sales{% endtrans %}</td>
                    <td class="text-right">{{ statsTotal | craue_currency('EUR') }}</td>
                </tr>
                <tr>
                    <td class="text-left">{% trans %}Book{% endtrans %}</td>
                    <td class="text-right">{{ totalBook | craue_currency('EUR') }}</td>
                </tr>                         
                <tr>
                    <td class="text-left">{% trans %}Bying{% endtrans %}</td>
                    <td class="text-right">{{ totalBuying | craue_currency('EUR') }}-</td>
                </tr>
                <tr>
                    <td class="text-left">{% trans %}Others{% endtrans %}</td>
                    <td class="text-right">{{ totalOthers | craue_currency('EUR') }}</td>
                </tr>
                <tr>
                    <td class="text-left"><strong>{% trans %}Total{% endtrans %}</strong></td>
                    <td class="text-right"><strong>{{ Gtotal | craue_currency('EUR') }}</strong></td>
                </tr>                                
            </tbody>
        </table>                    
    </body>
</html>