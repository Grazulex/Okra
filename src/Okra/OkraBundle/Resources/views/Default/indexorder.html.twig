{% for order in orders %}
        <tr>
            <td style="text-align: center;">{{ order.idTable }}</td>
            <td style="text-align: center;">
                {% if order.idOrderManual %}
                    {{ order.idOrderManual }}
                {% else %}
                    {{ order.id }}
                {% endif %}
            </td>                                        
            <td style="text-align: center;">{{ order.username }}</td>
            <td style="text-align: center;">{{ order.dateCreate | craue_time }} 
                <span class="badge">
                    {% if order.diffday == 0 %}                                            
                        {{ order.diffhour | craue_time }}
                    {% else %} 
                        {{ order.diffday }} {% trans %}days{% endtrans %}
                    {% endif %} 
                </span>
            </td>    
            <td style="text-align: center;">
                <div class="progress">
                    {% if order.diffday == 0 %}  
                        {% if order.diffhour|date('H') > 0 %}
                            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                100%
                            </div>                                            
                        {% elseif order.diffhour|date('i') > 45 %}
                            <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="{{ (order.diffhour|date('i') / 60) * 100 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (order.diffhour|date('i') / 60) * 100 }}%">
                                {{ ((order.diffhour|date('i') / 60) * 100) |round }}%
                            </div>                                              
                        {% else %}    
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{ (order.diffhour|date('i') / 60) * 100 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (order.diffhour|date('i') / 60) * 100 }}%">
                                {{ ((order.diffhour|date('i') / 60) * 100) |round }}%
                            </div>                                            
                        {% endif %}   
                    {% else %} 
                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            100%
                        </div>                                            
                    {% endif %}                                         
                </div>
            </td>
            <td style="text-align: right;">{{ order.total | craue_currency('EUR') }}</td>
            <td style="text-align: center;">
                <a href="{{ path('okra_table', {'tableId': order.id}) }}">
                    <button type="button" class="btn btn-xs btn-success">                                            
                        {% trans %}Open{% endtrans %}
                    </button>
                </a>    
            </td>
        </tr>                
{% endfor %}