{% extends "::base.html.twig" %}


{% block title %}
    {% trans %}Homepage{% endtrans %}    
{% endblock %}

{% block content_header '' %}

{% block content %}
    <div class="col-lg-10">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th style="text-align: center;"><i class="fa fa-glass"></i></th>
                        <th style="text-align: center;"><i class="fa fa-shopping-cart"></i></th>                                        
                        <th style="text-align: center;"><i class="fa fa-user"></i></th>
                        <th style="text-align: center;"><i class="fa fa-clock-o"></i></th>
                        <th style="text-align: center;"><i class="fa fa-warning"></i></th>
                        <th style="text-align: center;"><i class="fa fa-euro"></i></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                            <tr>
                                <td style="text-align: center;">{{ order.idTable }}</td>
                                <td style="text-align: center;">
                                    {% if order.idOrderManual %}
                                        {{ order.idOrderManual }}
                                    {% else %}
                                        {{ order.id }}
                                    {% endif %}
                                </td>                                        
                                <td style="text-align: center;">{{ order.username }}</td>
                                <td style="text-align: center;">{{ order.dateCreate | craue_time }} 
                                    <span class="badge">
                                        {% if order.diffday == 0 %}                                            
                                            {{ order.diffhour | craue_time }}
                                        {% else %} 
                                            {{ order.diffday }} {% trans %}days{% endtrans %}
                                        {% endif %} 
                                    </span>
                                </td>    
                                <td style="text-align: center;">
                                    <div class="progress">
                                        {% if order.diffday == 0 %}  
                                            {% if order.diffhour|date('H') > 0 %}
                                                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                    100%
                                                </div>                                            
                                            {% elseif order.diffhour|date('i') > 45 %}
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="{{ (order.diffhour|date('i') / 60) * 100 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (order.diffhour|date('i') / 60) * 100 }}%">
                                                    {{ ((order.diffhour|date('i') / 60) * 100) |round }}%
                                                </div>                                              
                                            {% else %}    
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{ (order.diffhour|date('i') / 60) * 100 }}" aria-valuemin="0" aria-valuemax="100" style="width: {{ (order.diffhour|date('i') / 60) * 100 }}%">
                                                    {{ ((order.diffhour|date('i') / 60) * 100) |round }}%
                                                </div>                                            
                                            {% endif %}   
                                        {% else %} 
                                            <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                                                100%
                                            </div>                                            
                                        {% endif %}                                         
                                    </div>
                                </td>
                                <td style="text-align: right;">{{ order.total | craue_currency('EUR') }}</td>
                                <td style="text-align: center;">
                                    <a href="{{ path('okra_table', {'tableId': order.id}) }}">
                                        <button type="button" class="btn btn-xs btn-success">                                            
                                            {% trans %}Open{% endtrans %}
                                        </button>
                                    </a>    
                                </td>
                            </tr>                
                    {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
                
    <div class="col-lg-2 col-md-4 text-center">

        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{% trans %}Session{% endtrans %}</h3>
            </div>
            <div class="panel-body">
                {{ actifsession.dateStart | craue_date }} 
                {% if actifsession.comment %} 
                    <br/> {{ actifsession.comment }} 
                {% endif %}
            </div>
        </div>
        
        <button type="button" class="btn btn-lg btn-primary" data-toggle="modal" data-target="#newTable">{% trans %}Open a new tabel{% endtrans %}</button>

        <div class="modal fade" id="newTable" tabindex="-1" role="dialog" aria-labelledby="Nieuw tafel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">{% trans %}New table{% endtrans %}</h4>
              </div>
                {{ form_start(form) }}    
                <div class="modal-body">                    
                      {{ form_errors(form) }}
                      
                      {{ form_label(form.idTable) }}
                      {{ form_widget(form.idTable) }}
                      
                      {{ form_label(form.idOrderManual) }}
                      {{ form_widget(form.idOrderManual) }}
                      
                      {{ form_label(form.idUser) }}
                      {{ form_widget(form.idUser) }}
                </div>
                <div class="modal-footer">
                  {{ form_widget(form.button) }}
                  {{ form_widget(form.save) }}
                </div>
              {{ form_end(form) }}    
            </div>
          </div>
        </div>

        <br><br>
        <button type="button" class="btn btn-xs btn-info" data-toggle="modal" data-target="#newBook">{% trans %}Book{% endtrans %}</button>
        
        
        <div class="modal fade" id="newBook" tabindex="-1" role="dialog" aria-labelledby="Nieuw tafel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">{% trans %}New Book{% endtrans %}</h4>
              </div>
                {{ form_start(formBook) }}    
                <div class="modal-body">                    
                      {{ form_errors(formBook) }}
                      
                      {{ form_label(formBook.price) }}
                      {{ form_widget(formBook.price) }}
                      
                      {{ form_label(formBook.comment) }}
                      {{ form_widget(formBook.comment) }}
                </div>
                <div class="modal-footer">
                  {{ form_widget(formBook.button) }}
                  {{ form_widget(formBook.save) }}
                </div>
              {{ form_end(formBook) }}    
            </div>
          </div>
        </div>
        
        
        <button type="button" class="btn btn-xs btn-info" data-toggle="modal" data-target="#newBuying">{% trans %}Bying{% endtrans %}</button>
        
        <div class="modal fade" id="newBuying" tabindex="-1" role="dialog" aria-labelledby="Nieuw tafel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">{% trans %}New Bying{% endtrans %}</h4>
              </div>
                {{ form_start(formBuying) }}    
                <div class="modal-body">                    
                      {{ form_errors(formBuying) }}
                      
                      {{ form_label(formBuying.price) }}
                      {{ form_widget(formBuying.price) }}
                      
                      {{ form_label(formBuying.comment) }}
                      {{ form_widget(formBuying.comment) }}
                </div>
                <div class="modal-footer">
                  {{ form_widget(formBuying.button) }}
                  {{ form_widget(formBuying.save) }}
                </div>
              {{ form_end(formBuying) }}    
            </div>
          </div>
        </div>
            
        <button type="button" class="btn btn-xs btn-info" data-toggle="modal" data-target="#newOthers">{% trans %}Others{% endtrans %}</button>
        
        <div class="modal fade" id="newOthers" tabindex="-1" role="dialog" aria-labelledby="Nieuw tafel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">{% trans %}New Others{% endtrans %}</h4>
              </div>
                {{ form_start(formOthers) }}    
                <div class="modal-body">                    
                      {{ form_errors(formOthers) }}
                      
                      {{ form_label(formOthers.price) }}
                      {{ form_widget(formOthers.price) }}
                      
                      {{ form_label(formOthers.comment) }}
                      {{ form_widget(formOthers.comment) }}
                </div>
                <div class="modal-footer">
                  {{ form_widget(formOthers.button) }}
                  {{ form_widget(formOthers.save) }}
                </div>
              {{ form_end(formOthers) }}    
            </div>
          </div>
        </div>
            
        <br><br>
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huges">
                            {{ statsCount }}
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-euro fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huges">
                            {{ statsTotal | craue_currency('EUR') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>   

        <table class="table">
            <tbody>
                <tr>
                    <td class="text-left">{% trans %}Sales{% endtrans %}</td>
                    <td class="text-center">+</td>
                    <td class="text-right">{{ statsTotal | craue_currency('EUR') }}</td>
                </tr>
                <tr>
                    <td class="text-left">{% trans %}Book{% endtrans %}</td>
                    <td class="text-center">+</td>
                    <td class="text-right">{{ totalBook | craue_currency('EUR') }}</td>
                </tr>                         
                <tr>
                    <td class="text-left">{% trans %}Bying{% endtrans %}</td>
                    <td class="text-center">-</td>
                    <td class="text-right">{{ totalBuying | craue_currency('EUR') }}</td>
                </tr>
                <tr>
                    <td class="text-left">{% trans %}Others{% endtrans %}</td>
                    <td class="text-center">+</td>
                    <td class="text-right">{{ totalOthers | craue_currency('EUR') }}</td>
                </tr>
                <tr>
                    <td class="text-left"><strong>{% trans %}Total{% endtrans %}</strong></td>
                    <td class="text-center"></td>
                    <td class="text-right"><strong>{{ Gtotal | craue_currency('EUR') }}</strong></td>
                </tr>                                
            </tbody>
        </table>

    </div>  
{% endblock %}